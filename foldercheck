#!/bin/sh

# I run this in a small pane in my tmux mail window.  I resize it
# sometimes so it must conform itself to its current size to look
# respectable.

alias my=typeset
# pirate version:
# alias me=typeset

sleep=$1
[ -z "$sleep" ] && sleep=30

stty_size_field () {
	stty -a | perl -lne '/(\d+)\s+'$1'/ && print qq|$1\n|'
}

tty_rows () {
	echo $(stty_size_field rows)
}

tty_cols () {
	echo $(stty_size_field columns)
}

center_msg () {
	my x y str mid_len
	str="$*"
	mid_len=${#str}
	mid_len=$(expr $mid_len / 2)
	x=$(tty_cols)
	y=$(tty_rows)
	y=$(expr $y / 2)
	y=$(expr $y - 1)
	x=$(expr $x / 2)
	x=$(expr $x - $mid_len)
	tput clear
	tput cup $y $x bold
	echo -n $str
	tput sgr0 civis
}

check () {
	my cols had=0 tmpf=$1
	cols=$(tty_cols)
	[ -z "$cols" ] && cols=$COLUMNS
	[ $had -eq 0 ] && center_msg '~looking...~'
	mnewdirs > ${tmpf}
	if [ ! -s "$tmpf" ]; then
		center_msg '~no unread mail~'
		had=0
	else
		[ $had -eq 0 ] && tput clear
		cat ${tmpf} | rs -e -w$cols
		had=1
	fi
}

sleeper_pid=0

shleep () {
	sleep $1 & sleeper_pid=$!
	wait $sleeper_pid 2>/dev/null
	sleeper_pid=0
}

wakeup () {
	[ $sleeper_pid -ne 0 ] && kill $sleeper_pid && wait $sleeper_pid
}

tmpf=${TMPDIR-/tmp}/foldercheck.$$

interrupted () {
	wakeup
	rm -f ${tmpf}
	reset
	exit 1
}

trap 'interrupted' INT TERM QUIT
trap 'wakeup' INFO

while true; do
	check ${tmpf}
	shleep ${sleep}
done
